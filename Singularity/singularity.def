Bootstrap: docker 
From: ubuntu:20.04

%labels
    Author Carla Rodriguez
    Version v1.0

%help 
    Singularity image for MOBER

%files
    /home/carlarr/Escritorio/MOBER_singularity /opt/MOBER_singularity
    
%post
    apt-get update
    apt-get install -y python3 python3-pip git 
    
    cd /opt/MOBER_singularity
    git clone https://github.com/Novartis/mober.git
    cd mober
    pip3 install -e .
    
%runscript
    exec python3 /opt/MOBER_singularity/mober/mober/mober.py "$@"
    
